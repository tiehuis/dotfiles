[user]
    name = Marc Tiehuis
    email = marctiehuis@gmail.com

[credential "https://bitbucket.org"]
    username = tiehuis

[credential "https://github.com"]
    username = tiehuis

[advice]
    statusHints = false
    detachedHead = false

[push]
    default = simple

[credential]
    helper = cache

[core]
    editor = nvim
    excludesfile = ~/.config/git/ignore
    pager = less -+F -X
    whitespace = trailing-space

[diff]
    algorithm = histogram

[alias]
    a  = add
    au = add --update
    b  = !git for-each-ref --sort='-authordate'                             \
            --format='%(authordate)%09%(objectname:short)%09%(refname)'     \
            refs/heads | sed -e 's-refs/heads/--'
    c  = commit --verbose
    ca = commit --verbose --amend
    d  = diff --patch-with-stat
    ds = diff --patch-with-stat --staged
    l  = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' \
            --abbrev-commit
    p  = push
    s  = status
